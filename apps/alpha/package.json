{
  "name": "@fastify-postgres-template/alpha",
  "version": "0.0.1",
  "private": true,
  "author": "Wednesday Solutions",
  "scripts": {
    "DEVELOPMENT": "-------------------------- DEVELOPMENT --------------------------",
    "start:dev": "ts-node-dev ./src/index.ts",
    "CODE_STYLE": "-------------------------- CODE STYLE --------------------------",
    "lint:no-fix": "eslint --ext ts './src/**/*.{js,ts}'",
    "lint:fix": "eslint --fix --ext ts './src/**/*.{js,ts}'",
    "TESTING": "-------------------------- TESTING --------------------------",
    "test:all": "pnpm run test:unit && pnpm run test:integration",
    "test:unit": "jest --verbose --testPathPattern=test/unit",
    "test:integration": "jest --verbose --testPathPattern=test/integration --coverage=false --setupFilesAfterEnv ./jest-setup-integration.ts",
    "test:coverage": "jest --coverage --silent --testPathPattern=test",
    "test:verbose": "jest --verbose --testPathPattern=test",
    "MIGRATIONS": "-------------------------- DB MIGRATIONS --------------------------",
    "migrate:up": "ts-node ./migrate.ts up",
    "migrate:down": "ts-node ./migrate.ts down",
    "migrate:purge": "ts-node ./migrate.ts purge",
    "seed:up": "ts-node ./migrate.ts seed:up",
    "seed:down": "ts-node ./migrate.ts seed:down",
    "BUILDING": "-------------------- BUILDING --------------------",
    "build": "tsc"
  },
  "dependencies": {
    "fastify": "^4.12.0",
    "fastify-custom-errors": "workspace:*",
    "fastify-zod": "^1.2.0",
    "lodash": "^4.17.21",
    "@types/lodash": "^4.14.191",
    "p-timeout": "^6.1.0",
    "pg": "^8.8.0",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.28.0",
    "tsconfig": "workspace:*",
    "umzug": "^3.2.1",
    "zod": "^3.20.2",
    "zod-to-json-schema": "^3.20.2"
  },
  "devDependencies": {
    "@types/node": "^18.11.18",
    "eslint-config-custom": "workspace:*",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.7.4"
  },
  "packageManager": "pnpm@7.25.0"
}
