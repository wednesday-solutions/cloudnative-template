{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**"
      ]
    },
    "lint:no-fix": {
      "cache": false
    },
    "lint:fix": {
      "cache": false
    },
    "start:dev": {
      "cache": false,
      "persistent": true
    },
    "start:qa": {
      "dependsOn": [
        "test:all",
        "build"
      ],
      "cache": false
    },
    "start:prod": {
      "dependsOn": [
        "test:all",
        "build"
      ],
      "cache": false
    },
    "test:all": {
      "dependsOn": [
        "lint:no-fix"
      ]
    },
    "test:unit": {
      "dependsOn": [
        "lint:no-fix"
      ]
    },
    "test:integration": {
      "dependsOn": [
        "lint:no-fix"
      ]
    },
    "test:coverage": {
      "dependsOn": [
        "lint:no-fix"
      ],
      "outputs": [
        "coverage/**"
      ]
    },
    "test:verbose": {
      "dependsOn": [
        "lint:no-fix"
      ]
    }
  },
  "globalEnv": [
    "NODE_ENV",
    "DB_DIALECT",
    "DB_DATABASE",
    "DB_HOST",
    "DB_PORT",
    "DB_USERNAME",
    "DB_PASSWORD",
    "PORT"
  ],
  "globalDependencies": [
    "./environments/.env",
    "./environments/.env.development",
    "./environments/.env.qa"
  ]
}