{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "lint:no-fix": {},
    "lint:fix": {},
    "start:dev": {
      "cache": false
    },
    "start:qa": {
      "dependsOn": ["test:all", "lint:no-fix", "build"],
      "cache": false
    },
    "start:prod": {
      "dependsOn": ["test:all", "lint:no-fix", "build"],
      "cache": false
    },
    "test:all": {
      "dependsOn": ["lint"]
    },
    "test:unit": {
      "dependsOn": ["lint"]
    },
    "test:integration": {
      "dependsOn": ["lint"]
    },
    "test:coverage": {
      "dependsOn": ["lint"],
      "outputs": ["coverage/**"]
    },
    "test:verbose": {
      "dependsOn": ["lint"]
    }
  },
  "globalEnv": [
    "NODE_ENV",
    "DB_DIALECT",
    "DB_DATABASE",
    "DB_HOST",
    "DB_PORT",
    "DB_USERNAME",
    "DB_PASSWORD"
  ],
  "globalDependencies": [
    "./environments/.env",
    "./environments/.env.development",
    "./environments/.env.qa"
  ]
}
