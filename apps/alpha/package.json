{
  "name": "@fastify-postgres-template/alpha",
  "version": "0.0.1",
  "private": true,
  "author": "Wednesday Solutions",
  "scripts": {
    "DEVELOPMENT": "-------------------------- DEVELOPMENT --------------------------",
    "start:dev": "ts-node-dev --files ./src/index.ts",
    "start:qa": "node ./dist/index.js",
    "start:prod": "node ./dist/index.js",
    "CODE_STYLE": "-------------------------- CODE STYLE --------------------------",
    "lint:no-fix": "eslint --ext ts './src/**/*.{js,ts}'",
    "lint:fix": "eslint --fix --ext ts './src/**/*.{js,ts}'",
    "TESTING": "-------------------------- TESTING --------------------------",
    "test:all": "pnpm run test:unit && pnpm run test:integration",
    "test:unit": "jest --verbose --testPathPattern=test/unit --coverage=false",
    "test:integration": "dotenv -e .env.test -- jest --verbose --runInBand --forceExit --testPathPattern=test/integration --coverage=false --setupFilesAfterEnv ./jest-setup-integration.ts",
    "test:coverage": "dotenv -e .env.test -- jest --coverage --runInBand --silent --verbose --forceExit --testPathPattern=test --setupFilesAfterEnv ./jest-setup-integration.ts",
    "test:verbose": "jest --verbose --testPathPattern=test",
    "MAIN_DB_MIGRATIONS": "-------------------------- MAIN DB MIGRATIONS --------------------------",
    "migrate:main:setup": "dotenv -e .env.migrations -- ts-node ./migrate.ts MAIN:SETUP",
    "migrate:main:up": "dotenv -e .env.migrations -- ts-node ./migrate.ts MAIN:UP",
    "migrate:main:down": "dotenv -e .env.migrations -- ts-node ./migrate.ts MAIN:DOWN",
    "migrate:main:purge": "dotenv -e .env.migrations -- ts-node ./migrate.ts MAIN:PURGE",
    "TENANT_DB_MIGRATIONS": "-------------------------- TENANT DB MIGRATIONS --------------------------",
    "migrate:tenant:up": "ts-node ./migrate.ts TENANT:UP",
    "SEEDS": "-------------------------- SEEDS --------------------------",
    "seed:up": "ts-node ./migrate.ts seed:up",
    "seed:down": "ts-node ./migrate.ts seed:down",
    "BUILDING": "-------------------- BUILDING --------------------",
    "prebuild": "rimraf ./dist",
    "build": "pnpm run prebuild && tsc -p ./tsconfig.build.json",
    "build:ci": "turbo run build --filter=@fastify-postgres-template/alpha"
  },
  "dependencies": {
    "@fastify/autoload": "^5.7.1",
    "@types/lodash": "^4.14.191",
    "argon2": "^0.30.3",
    "bull": "^4.10.3",
    "dotenv": "^16.0.3",
    "dotenv-cli": "^7.0.0",
    "entities-schemas": "workspace:*",
    "fastify": "^4.12.0",
    "fastify-custom-errors": "workspace:*",
    "fastify-zod": "^1.2.0",
    "ioredis": "^5.3.0",
    "lodash": "^4.17.21",
    "p-timeout": "^6.1.0",
    "pg": "^8.8.0",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.28.0",
    "tsconfig": "workspace:*",
    "umzug": "^3.2.1",
    "uuid": "^9.0.0",
    "zod": "^3.20.2",
    "zod-to-json-schema": "^3.20.2"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.6.0",
    "@types/node": "^18.11.18",
    "@types/uuid": "^9.0.1",
    "esbuild": "^0.17.8",
    "eslint-config-custom": "workspace:*",
    "leaked-handles": "^5.2.0",
    "rimraf": "^4.1.2",
    "testcontainers": "^9.1.3",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.7.4"
  },
  "packageManager": "pnpm@7.25.0"
}
